{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "typeRoots": [
            "./typings"
        ],
        
    },
    "include": [
        "bin/*",
        "src/**/*",
        "index.ts"
    ]
}
